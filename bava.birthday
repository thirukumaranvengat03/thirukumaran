<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Birthday Surprise ‚Äî Sister</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(120deg, #f6d365, #fda085, #a1c4fd, #c2e9fb);
        background-size: 400% 400%;
        animation: bgAnimate 20s ease infinite;
        font-family: "Montserrat", sans-serif;
        overflow: hidden;
      }

      @keyframes bgAnimate {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .new-box {
        width: 400px;
        max-width: 90%;
        padding: 35px 25px;
        background: linear-gradient(
          145deg,
          rgba(255, 255, 255, 0.2),
          rgba(255, 255, 255, 0.05)
        );
        backdrop-filter: blur(15px);
        border-radius: 32px;
        text-align: center;
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.55);
        color: #fff;
        position: relative;
        overflow: hidden;
        animation: fadeUp 2s ease forwards;
        opacity: 0;
      }

      @keyframes fadeUp {
        0% {
          opacity: 0;
          transform: translateY(50px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .new-box h1 {
        font-family: "Pacifico", cursive;
        font-size: 2.2rem;
        color: #ffeb3b;
        margin-bottom: 12px;
        animation: glowText 1.8s ease-in-out infinite alternate;
      }

      @keyframes glowText {
        0% {
          text-shadow: 0 0 10px #fff;
          color: #ffd700;
        }
        25% {
          text-shadow:
            0 0 20px #ffeb3b,
            0 0 30px #ffd700;
          color: #ffeb3b;
        }
        50% {
          text-shadow:
            0 0 30px #fff,
            0 0 50px #ffe066;
          color: #fff;
        }
        75% {
          text-shadow:
            0 0 40px #ffeb3b,
            0 0 60px #ffd700;
          color: #ffeb3b;
        }
        100% {
          text-shadow:
            0 0 50px #ffd700,
            0 0 70px #ffe066;
          color: #ffd700;
        }
      }

      
      .new-box p {
        font-size: 1rem;
        line-height: 1.5;
        margin: 6px 0;
        opacity: 0;
        transform: translateY(15px);
      }

      
      #surpriseBtn {
        margin-top: 15px;
        padding: 12px 22px;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        background: linear-gradient(45deg, #ffe066, #ff8a65);
        color: #000;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: 0.3s;
      }
      #surpriseBtn:hover {
        transform: scale(1.1);
      }

      
      .photo {
        position: fixed;
        width: 130px;
        height: 130px;
        object-fit: cover;
        border-radius: 20px;
        border: 4px solid #fff;
        box-shadow:
          0 0 15px rgba(255, 255, 255, 0.8),
          0 15px 35px rgba(0, 0, 0, 0.5);
        opacity: 0;
        transform: translateX(-50%) translateY(0) scale(0.5) rotate(0deg);
      }

      
      @keyframes floatUp {
        0% {
          transform: translate(-50%, 140vh) scale(0.3) rotate(0deg);
          opacity: 0;
          filter: drop-shadow(0 0 5px #fff);
        }
        40% {
          transform: translate(-50%, -10px) scale(1.05) rotate(10deg);
          opacity: 1;
          filter: drop-shadow(0 0 20px #ffeb3b);
        }
        60% {
          transform: translate(-50%, -5px) scale(1) rotate(-10deg);
          opacity: 1;
          filter: drop-shadow(0 0 25px #fff);
        }
        80% {
          transform: translate(-50%, 0px) scale(1.02) rotate(5deg);
          opacity: 1;
          filter: drop-shadow(0 0 15px #ffeb3b);
        }
        100% {
          transform: translate(-50%, 0px) scale(1) rotate(0deg);
          opacity: 1;
          filter: drop-shadow(0 0 10px #fff);
        }
      }

      .photo.show {
        animation:
          riseUp 2.6s ease forwards,
          blinking 2s infinite alternate,
          rotateGlow 4s linear infinite;
      }

      @keyframes blinking {
        0% {
          opacity: 0.7;
        }
        50% {
          opacity: 1;
        }
        100% {
          opacity: 0.7;
        }
      }

      @keyframes rotateGlow {
        0% {
          transform: translateX(-50%) rotate(0deg);
          filter: drop-shadow(0 0 6px #fff);
        }
        25% {
          transform: translateX(-50%) rotate(10deg);
          filter: drop-shadow(0 0 15px #ffeb3b);
        }
        50% {
          transform: translateX(-50%) rotate(20deg);
          filter: drop-shadow(0 0 25px #fff);
        }
        75% {
          transform: translateX(-50%) rotate(10deg);
          filter: drop-shadow(0 0 15px #ffeb3b);
        }
        100% {
          transform: translateX(-50%) rotate(0deg);
          filter: drop-shadow(0 0 6px #fff);
        }
      }

      @keyframes riseUp {
        0% {
          transform: translate(-50%, 140vh) scale(0.3);
          opacity: 0;
        }
        60% {
          transform: translate(-50%, -20px) scale(1.05);
          opacity: 1;
        }
        100% {
          transform: translate(-50%, 0) scale(1);
          opacity: 1;
        }
      }

      
      .firework {
        position: fixed;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        animation: explode 1.3s ease-out forwards;
      }
      @keyframes explode {
        from {
          transform: translate(0, 0);
          opacity: 1;
        }
        to {
          transform: translate(var(--x), var(--y));
          opacity: 0;
        }
      }

      
      .bg-photo {
        position: fixed;
        inset: 0;
        background:
          linear-gradient(rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 0.35)),
          url("bava14.jpeg") no-repeat center;
        background-size: cover;
        filter: blur(2px);
        z-index: -2;
      }

      @media (max-width: 640px) {
        .new-box {
          width: 280px;
          padding: 20px 15px;
        }
        .new-box h1 {
          font-size: 1.6rem;
        }
        .new-box p {
          font-size: 0.9rem;
        }
        .photo {
          width: 90px;
          height: 90px;
        }
      }
      
      .page1 h1,
      .page2 h1 {
        font-family: "Pacifico", cursive;
        font-size: 2.2rem;
        color: #978106;
        margin-bottom: 15px;
        animation: pulseGlow 4s ease-in-out infinite alternate;
      }

      .new-box h1 {
        font-family: "Pacifico", cursive;
        font-size: 2.2rem;
        color: #ffd90009;
        margin-bottom: 12px;
        
      }

      @keyframes glowText {
        0% {
          text-shadow: 0 0 50px #fff;
          color: #ffd700;
        }
        25% {
          text-shadow:
            0 0 288px #ffeb3b,
            0 0 3px #ffd700;
          color: #ffeb3b;
        }
        50% {
          text-shadow:
            0 0 399px #fff,
            0 0 5px #ffe066;
          color: #fff;
        }
        75% {
          text-shadow:
            0 0 477px #ffeb3b,
            0 0 6px #ffd700;
          color: #ffeb3b;
        }
      }

      
      @media (max-width: 640px) {
        .new-box {
          width: 280px;
          padding: 20px 15px;
        }
        .new-box h1 {
          font-size: 1.6rem;
        }
        .new-box p {
          font-size: 0.9rem;
        }
        .photo {
          width: 90px;
          height: 90px;
        }
      }
    </style>
  </head>

  <body>
    <div class="new-box">
      <h1>üéâ Happy Birthday sweet Sister! üéâ</h1>
      <p>"To my amazing sister,</p>
      <p>
        On your special day, may laughter light up every corner of your life.
      </p>
      <p>May every step you take be blessed with success,</p>
      <p>Every moment be filled with love,</p>
      <p>And may your heart always dance to the rhythm of happiness." üíñ</p>

      
      <button id="surpriseBtn">Click for Surprise üéÅ</button>
    </div>

    <div class="bg-photo"></div>

    <script>
      const photos = [
        "bava1.jpeg",
        "bava2.jpeg",
        "bava12.jpeg",
        "bava4.jpeg",
        "bava5.jpeg",
        "bava9.jpeg",
        "bava10.jpeg",
        "bava11.jpeg",
      ];

      const positions = [
        [15, 8],
        [50, 0],
        [85, 12],
        [10, 50],
        [90, 50],
        [10, 78],
        [50, 82],
        [90, 78],
      ];

      
      function showText() {
        const paragraphs = document.querySelectorAll(".new-box p");
        paragraphs.forEach((p, i) => {
          setTimeout(() => {
            p.style.transition = "opacity 1s ease, transform 1s ease";
            p.style.opacity = "1";
            p.style.transform = "translateY(0)";
          }, i * 800);
        });
      }

      
      function showPhotos() {
        positions.forEach((p, i) => {
          setTimeout(() => {
            const img = document.createElement("img");
            img.src = photos[i % photos.length] + "?w=900&q=60";
            img.className = "photo";
            img.style.left = p[0] + "vw";
            img.style.top = p[1] + "vh";
            document.body.appendChild(img);

            img.animate(
              [
                {
                  transform: `translate(-50%, ${p[1]}vh) scale(0.3)`,
                  opacity: 0,
                },
                { transform: `translate(-50%, -10px) scale(1.05)`, opacity: 1 },
                { transform: `translate(-50%, 0) scale(1)`, opacity: 1 },
              ],
              { duration: 2600, easing: "ease-out", fill: "forwards" },
            );

            img.style.animation =
              "blinking 2s infinite alternate, rotateGlow 4s linear infinite";
          }, i * 600); // stagger each photo by 600ms
        });
      }

      document.getElementById("surpriseBtn").addEventListener("click", () => {
        showText();
        showPhotos();
        document.getElementById("surpriseBtn").style.display = "none";
      });

      
      setInterval(() => {
        for (let i = 0; i < 18; i++) {
          const f = document.createElement("div");
          f.className = "firework";
          f.style.left = Math.random() * 100 + "vw";
          f.style.top = Math.random() * 100 + "vh";
          f.style.background = ["#ff0", "#0ff", "#f0f", "#0f0", "#f00", "#00f"][
            Math.floor(Math.random() * 6)
          ];
          f.style.setProperty("--x", Math.random() * 200 - 100 + "px");
          f.style.setProperty("--y", Math.random() * 200 - 100 + "px");
          document.body.appendChild(f);
          setTimeout(() => f.remove(), 1300);
        }
      }, 700);
      function showPhotos() {
        positions.forEach((p, i) => {
          setTimeout(() => {
            const img = document.createElement("img");
            img.src = photos[i % photos.length] + "?w=900&q=60";
            img.className = "photo";
            img.style.left = p[0] + "vw";
            img.style.top = p[1] + "vh";
            document.body.appendChild(img);

            
            img.style.animation = "floatUp 3s ease forwards";

            
            setTimeout(() => {
              img.style.animation +=
                ", blinking 2s infinite alternate, rotateGlow 4s linear infinite";
            }, 3000);
          }, i * 600); 
        });
      }
    </script>
  </body>
</html>
